{
  "name": "nikosdion/joomla_com_upgrader",
  "description": "Rector rules to upgrade Joomla 3 components",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "license": "GPL-2.0-or-later",
  "version": "1.0.0-dev",
  "config": {
    "optimize-autoloader": true
  },
  "repositories": [
    {
      "name": "nikosdion/joomla_typehints",
      "type": "vcs",
      "url": "https://github.com/nikosdion/joomlatypehints"
    }
  ],
  "require": {
    "php": "^7.2 | ^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "rector/rector": "^0.14.0",
    "nikosdion/joomla_typehints": "*",
    "phpunit/phpunit": "^9.5.23"
  },
  "autoload": {
    "psr-4": {
      "Rector\\": "rules",
      "Rector\\Tests\\": "rules-tests"
    }
  }
}